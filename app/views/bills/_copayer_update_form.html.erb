<div class="modal fade" id="copayer-update-<%= copayer.id %>" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <%= form_tag copayer_path(copayer), method: :patch, remote: true do %>
          <div class="form-group">  
            <%= label_tag :first_name %>
            <%= text_field_tag :first_name, copayer.first_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :last_name %>
            <%= text_field_tag :last_name, copayer.last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :amount %>
            <%= text_field_tag :amount, number_to_currency(copayer.amount), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :phone_number %>
            <%= text_field_tag :phone_number, copayer.phone_number, class: 'form-control' %>
          </div>
          <div class="modal-footer">
            <%= submit_tag "Update", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>