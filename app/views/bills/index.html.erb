<div class="container">
  <div class="row centered">
    <h1>Bills</h1>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#new-bill-modal">
      New Bill
    </button>
    <div class="fifty-space"></div>
    <div class="modal fade" id="new-bill-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body">
              <%= form_tag bills_path, method: :post, remote: true do %>
                <div class="form-group">
                  <%= label_tag :title %>
                  <%= text_field_tag :title, nil, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= label_tag :description %>
                  <%= text_area_tag :description, nil, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= label_tag :day_of_month %>
                  <%= number_field_tag :day_of_month, nil, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= label_tag :total_amount %>
                  <%= number_field_tag :total_amount, nil, class: 'form-control' %>
                </div>
                <div class="modal-footer">
                  <%= submit_tag "Create", class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row" id="bill-collection">
    <%= render partial: 'bill', collection: @bills, as: :bill %>
  </div>
</div>